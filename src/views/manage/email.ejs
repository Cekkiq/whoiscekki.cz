<%- include('../layout', { title: 'Change Email' }) %>
<div class="content px-4">
  <h1>Change Email</h1>
  <div class="row">
    <%- include('./sidebar', { active: 'email' }) %>
    <div class="col-md-9">
      <form method='POST' action='/Account/Manage' class='mb-3'>
        <input type='hidden' name='action' value='changeEmail'>
        <div class='form-floating mb-3'>
          <input type='email' class='form-control' id='currentEmail' value='<%= user.email %>' readonly>
          <label for='currentEmail' class='form-label'>Current email</label>
        </div>
        <div class='form-floating mb-3'>
          <input type='password' name='currentPassword' id='currentPassword' class='form-control' placeholder='Current password' required>
          <label for='currentPassword' class='form-label'>Current password</label>
        </div>
        <div class='form-floating mb-3'>
          <input type='email' name='email' id='email' class='form-control' placeholder='New email' required>
          <label for='email' class='form-label'>New email</label>
        </div>
        <button type='submit' class='btn btn-primary w-100'>Change Email</button>
      </form>
    </div>
  </div>
</div> 