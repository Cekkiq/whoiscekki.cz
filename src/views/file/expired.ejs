<%- include('../layout', { title: 'Link Expired' }) %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-secondary">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i> Link Expired
                    </h4>
                </div>
                <div class="card-body text-center p-4">
                    <div class="alert-icon mb-4">
                        <i class="bi bi-hourglass-split text-secondary" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h3 class="mb-4">This Link Has Expired</h3>
                    
                    <p class="text-muted mb-4">
                        The file sharing link you're trying to access has expired.
                        Please contact the file owner for a new link if you need access.
                    </p>
                    
                    <div class="d-flex justify-content-center gap-3">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i> Go to Home
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
