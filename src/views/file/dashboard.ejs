<%- include('../layout', { title: 'File Access' }) %>

<div class="container py-5">
  <div class="mb-4">
    <h1 class="h2 text-gradient m-0">My Cloud Storage</h1>
  </div>
  
  <% if (typeof query !== 'undefined' && query.error && query.message) { %>
    <div class="alert <%= query.error === 'true' ? 'alert-danger' : 'alert-success' %> alert-dismissible fade show" role="alert">
      <%= query.message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <i class="bi bi-exclamation-triangle-fill me-2"></i> <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <div class="row g-4">
    <!-- Left: Subscription Card -->
    <div class="col-12 col-lg-4">
      <% const planName = (subscription && subscription.name) ? subscription.name : 'Free'; %>
      <% const planKey = (planName === 'Ultra') ? 'ultra' : ((planName === 'Pro') ? 'pro' : 'free'); %>
      <% const limitGb = Number((subscription && subscription.storage_limit_gb) ? subscription.storage_limit_gb : 5); %>
      <% const usedGb = Number(usedBytes || 0) / (1024*1024*1024); %>
      <% const usedPct = Math.min(100, Math.round((usedGb / limitGb) * 100)); %>
      <div class="sub-card plan-<%= planKey %>">
        <div class="d-flex justify-content-between align-items-start">
          <div>
            <div class="badge plan-badge"><%= planName %></div>
            <h3 class="mt-2 mb-1">Your plan</h3>
            <div class="text-muted small"><%= (subscription && subscription.description) ? subscription.description : '' %></div>
          </div>
        </div>
        <div class="mt-4">
          <div class="d-flex justify-content-between align-items-center mb-1 small text-muted">
            <span>Storage</span>
            <span><%= usedGb.toFixed(2) %> GB / <%= limitGb %> GB</span>
          </div>
          <div class="progress plan-progress" style="height: 8px;">
            <div class="progress-bar plan-progress-bar" role="progressbar" style="width: <%= usedPct %>%"></div>
          </div>
        </div>
        <div class="mt-4 d-grid">
          <% if (planKey === 'ultra') { %>
            <a href="/FileAccess/ManagePlan" class="btn btn-outline-light w-100">Manage plan</a>
          <% } else { %>
            <a href="/FileAccess/ManagePlan?upgrade=1" class="btn btn-primary w-100">Upgrade</a>
          <% } %>
        </div>
      </div>
      <!-- Redeem Code under plan card -->
      <div class="mt-3">
        <div class="sub-card">
          <h5 class="mb-2"><i class="bi bi-gift me-2"></i>Have a code?</h5>
          <form method="POST" action="/FileAccess/redeem" class="d-flex gap-2">
            <input type="text" class="form-control" name="code" placeholder="Enter code" required>
            <button class="btn btn-outline-primary" type="submit">Redeem</button>
          </form>
          <div class="small text-muted mt-2">Codes add extra GB to your storage limit.</div>
        </div>
      </div>
    </div>

    <!-- Right: Upload + Files -->
    <div class="col-12 col-lg-8">
      <!-- Upload Area -->
      <div class="upload-area mb-5" id="dropZone">
        <div id="uploadAreaContent">
          <i class="bi bi-cloud-arrow-up upload-icon"></i>
          <h4 class="mt-3 mb-2">Drag & Drop files here</h4>
          <p class="text-muted mb-3">or</p>
          <form id="uploadForm" method='POST' action='/FileAccess/upload' enctype='multipart/form-data' class='d-inline-block'>
            <label class="btn btn-primary px-4 py-2 rounded-pill">
              <i class="bi bi-upload me-2"></i> Select Files
              <input type='file' name='file' class='d-none' id="fileInput" multiple>
            </label>
          </form>
        </div>
        <div class="progress mt-3" style="height: 8px; display: none;" id="uploadProgressWrap">
          <div id="uploadProgress" class="progress-bar bg-primary" role="progressbar" style="width: 0%"></div>
        </div>
        <div class="d-flex justify-content-end mt-1">
          <small class="text-muted" id="uploadPercent"></small>
        </div>
        <div id="uploadList" class="mt-3" style="display:none;">
        </div>
      </div>

      <!-- Files List -->
      <% if (files && files.length > 0) { %>
        <div class="file-list">
          <% files.forEach(function(file, index) { %>
            <div class="file-item py-2 d-flex align-items-center justify-content-between">
              <div class="d-flex align-items-center">
                <i class="bi bi-file-earmark-text fs-4 me-3 text-primary"></i>
                <div class="me-3">
                  <div class="text-truncate" style="max-width: 360px;" title="<%= file.originalName %>"><%= file.originalName %></div>
                  <div class="small text-muted"><%= (file.size/1024/1024).toFixed(2) %> MB â€¢ <%= new Date(file.uploadedAt).toLocaleString() %></div>
                </div>
              </div>
              <div class="btn-group btn-group-sm file-actions" role="group">
                <a href='/FileAccess/download/<%= file.id %>' class='icon-btn' title='Download'>
                  <i class="bi bi-download"></i>
                </a>
                <% if (!file.shared_publicToken) { %>
                  <button type='button' class='icon-btn copy-share' data-id='<%= file.id %>' title='Share (copy link)'>
                    <i class="bi bi-share"></i>
                  </button>
                <% } else { %>
                  <button type='button' class='icon-btn copy-link' data-token='<%= file.shared_publicToken %>' title='Copy shared link'>
                    <i class="bi bi-link-45deg"></i>
                  </button>
                  <form method='POST' action='/FileAccess/unshare/<%= file.id %>' class='d-inline'>
                    <button type='submit' class='icon-btn' title='Unshare'>
                      <i class="bi bi-x-circle"></i>
                    </button>
                  </form>
                <% } %>
                <form method='POST' action='/FileAccess/delete/<%= file.id %>' class='d-inline confirm-delete-form'>
                  <button type='submit' class='icon-btn danger' title='Delete'>
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </div>
            </div>
            <% if (index < files.length - 1) { %>
              <hr class="my-2">
            <% } %>
          <% }); %>
        </div>
      <% } else { %>
        <div class="text-center py-5">
          <i class="bi bi-folder-x empty-icon"></i>
          <h4 class="mt-3">No files uploaded yet</h4>
          <p class="text-muted">Upload your first file by clicking the button above</p>
        </div>
      <% } %>
    </div>
  </div>
</div>
<script src="/js/fileaccess.js"></script>
