<%- include('../layout', { title: 'Shared File: ' + file.name }) %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-file-earmark-arrow-down me-2"></i>Download File
                        </h4>
                        <span class="badge bg-light text-dark">
                            <i class="bi bi-shield-check text-success me-1"></i> Secure Download
                        </span>
                    </div>
                </div>
                <div class="card-body text-center p-4">
                    <div class="file-icon-container mb-4">
                        <i class="bi bi-file-earmark-text display-1 text-primary"></i>
                    </div>
                    
                    <h3 class="mb-3"><%= file.name %></h3>
                    
                    <div class="file-details mb-4">
                        <div class="d-flex justify-content-center gap-4">
                            <div class="text-muted">
                                <i class="bi bi-hdd me-1"></i> <%= file.size %>
                            </div>
                            <div class="text-muted">
                                <i class="bi bi-calendar3 me-1"></i> <%= file.uploaded %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-info d-flex align-items-center" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <div>
                            This file has been scanned for viruses and is safe to download.
                        </div>
                    </div>
                    
                    <form action="/FileAccess/public/<%= file.token %>" method="POST" class="mt-4">
                        <% if (file.passwordProtected) { %>
                            <div class="mb-3 text-start">
                                <label for="password" class="form-label">Enter password to download</label>
                                <input type="password" class="form-control" id="password" name="password" required>
                                <% if (error) { %>
                                    <div class="invalid-feedback d-block"><%= error %></div>
                                <% } %>
                            </div>
                        <% } %>
                        
                        <button type="submit" class="btn btn-primary btn-lg px-4">
                            <i class="bi bi-download me-2"></i> Download File
                        </button>
                    </form>
                    
                    <div class="mt-4 text-muted small">
                        <i class="bi bi-shield-lock me-1"></i> Secure connection â€¢ File scanned for viruses
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <a href="/" class="text-decoration-none">
                    <i class="bi bi-arrow-left me-1"></i> Back to home
                </a>
            </div>
        </div>
    </div>
</div>
