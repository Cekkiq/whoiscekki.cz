<%- include('../layout', { title: 'File Not Found' }) %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-octagon me-2"></i> File Not Found
                    </h4>
                </div>
                <div class="card-body text-center p-4">
                    <div class="alert-icon mb-4">
                        <i class="bi bi-file-earmark-x text-warning" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h3 class="mb-4">Oops! File Not Found</h3>
                    
                    <p class="text-muted mb-4">
                        The file you're looking for doesn't exist or has been removed.
                        Please check the link and try again.
                    </p>
                    
                    <div class="d-flex justify-content-center gap-3">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i> Go to Home
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
