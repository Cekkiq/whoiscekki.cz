<%- include('layout', { title: 'Register' }) %>
<div class="content px-4">
  <h1 class="text-center mb-4">Register</h1>
  <div class="row justify-content-center">
    <div class="col-md-6 text-center">
      <section>
        <form method="post" action="/Account/Register">
          <h2 class="h5 mb-3">Create a new account.</h2>
          <hr>
          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger"> <%= error %> </div>
          <% } %>
          <div class="form-floating mb-3">
            <input type="text" placeholder="Invitation Token" name="invite" id="invite" class="form-control" value="<%= token || '' %>" <%= token ? 'readonly' : '' %> required />
            <label for="invite" class="form-label">Invitation Token</label>
          </div>
          <div class="form-floating mb-3">
            <input type="email" placeholder="name@example.com" name="email" id="email" class="form-control" required />
            <label for="email" class="form-label">Email</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" placeholder="password" name="password" id="password" class="form-control" required />
            <label for="password" class="form-label">Password</label>
          </div>
          <div><button type="submit" class="w-100 btn btn-lg btn-primary">Register</button></div>
          <div class="mt-3">
            <p><a href="/Account/Login">Already have an account? Log in</a></p>
            <p><a href="/Account/ForgotPassword">Forgot your password?</a></p>
            <p><a href="/Account/ResendEmailConfirmation">Resend email confirmation</a></p>
          </div>
        </form>
      </section>
    </div>
  </div>
</div> 