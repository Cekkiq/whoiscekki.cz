<%- include('layout', { title: '2FA Verification' }) %>
<div class="content px-4">
  <h1 class="text-center mb-4">Two-Factor Authentication</h1>
  <div class="row justify-content-center">
    <div class="col-md-6 text-center">
      <section>
        <form method="post" action="/Account/2fa/verify-login">
          <h2 class="h5 mb-3">Enter your 2FA code</h2>
          <hr>
          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger"> <%= error %> </div>
          <% } %>
          <div class="form-floating mb-3">
            <input type="text" placeholder="2FA code" name="code" id="code" class="form-control" required autofocus />
            <label for="code" class="form-label">2FA code</label>
          </div>
          <div><button type="submit" class="w-100 btn btn-lg btn-primary">Verify</button></div>
          <div class="mt-3">
            <p><a href="/Account/ForgotPassword">Forgot your password?</a></p>
            <p><a href="/Account/Register">Register as a new user</a></p>
            <p><a href="/Account/ResendEmailConfirmation">Resend email confirmation</a></p>
          </div>
        </form>
      </section>
    </div>
  </div>
</div> 